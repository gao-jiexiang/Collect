<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hot_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="100dp"
        android:src="@drawable/follow"
        android:layout_height="100dp" />
    <TextView
        android:text="31312312"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/hot_image"
        android:textSize="20sp"
        android:id="@+id/hot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="31312312"
        android:textColor="@color/gray"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/hot_name"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/hot_image"
        android:textSize="15sp"
        android:id="@+id/hot_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/red"
        android:text="31312312"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/hot_desc"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/hot_image"
        android:textSize="25sp"
        android:id="@+id/hot_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>